@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

$theme-color = #F69

.left {
	align-self flex-start
}

.right {
	align-self flex-end
}

.theme {
	color $theme-color
}

.bold {
	font-weight bold
}

.point-list {
	width 100%
	padding 5% 10%
	list-style disc
	align-self flex-start
	line-height 1.2em

	& > li {
		text-align left
	}

	& .sub-list {
		padding 1em 0 1em 1.5em
		font-size small
		line-height 1.5em
	}
}

.image {
	width 90%
	height auto
}

.code-block {
	max-width 100%
	max-height 60%
}

.small {
	font-size x-small
}